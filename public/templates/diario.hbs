      margin: 0;
      padding: 0;
    }

    .contenido {
      column-count: 3;
      column-gap: 20px;
      width: 100%;
    }

    h1, h2, h3 {
      break-inside: avoid;
    }

    p {
      text-align: justify;
    }
  </style>
